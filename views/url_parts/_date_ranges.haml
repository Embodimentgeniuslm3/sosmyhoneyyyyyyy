- $defaultMsg = "(" . strtolower( $I18N->msg( 'default' ) ) . ")"

%dt range
%dd
  = $I18N->msg( 'url-structure-special-range', [ 'variables' => [ '<code>start</code>', '<code>end</code>' ], 'parsemag' => true ] )
  %ul.special-ranges
    %li
      %code latest
      = $defaultRange === 'latest' ? $defaultMsg : ''
      = $I18N->msg( 'url-structure-special-range-latest' )
    %li
      %code latest-<i>N</i>
      = $I18N->msg( 'url-structure-special-range-latest-n' )
    %li
      %code current
      = $I18N->msg( 'url-structure-current' )
    %li
      %code this-week
      = $defaultRange === 'this-week' ? $defaultMsg : ''
      = $I18N->msg( 'this-week' )
    %li
      %code last-week
      = $defaultRange === 'last-week' ? $defaultMsg : ''
      = $I18N->msg( 'last-week' )
    %li
      %code this-month
      = $defaultRange === 'this-month' ? $defaultMsg : ''
      = $I18N->msg( 'this-month' )
    %li
      %code last-month
      = $defaultRange === 'last-month' ? $defaultMsg : ''
      = $I18N->msg( 'last-month' )
%dt start
%dd
  = $I18N->msg( 'url-structure-start-date', [ 'variables' => [ '<code>YYYY-MM-DD</code>', '<code>end</code>' ], 'parsemag' => true ] )
  - if ( in_array( $currentApp, [ 'pageviews' ] ) )
    %br
    = $I18N->msg( 'url-structure-start-month', [ 'variables' => [ '<code>YYYY-MM</code>' ] ] )
%dt end
%dd
  = $I18N->msg( 'url-structure-end-date', [ 'variables' => [ '<code>YYYY-MM-DD</code>' ], 'parsemag' => true ] )
  - if ( in_array( $currentApp, [ 'pageviews' ] ) )
    %br
    = $I18N->msg( 'url-structure-end-month', [ 'variables' => [ '<code>YYYY-MM</code>' ] ] )
